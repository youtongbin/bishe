<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ytb.dao.UserDao">

    <resultMap id="BaseResultMap" type="com.ytb.pojo.User" >
        <id column="userId" property="userId" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="phone" property="phone" jdbcType="VARCHAR" />
        <result column="email" property="email" jdbcType="VARCHAR" />
        <result column="role" property="role" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    </resultMap>


    <insert id="insert" parameterType="User">

        insert into user (username, password, phone, email, role, create_time, update_time) values
        <if test="role==null">
            (#{username},#{password},#{phone},#{email},2,now(),now())
        </if>
        <if test="role!=null">
            (#{username},#{password},#{phone},#{email},#{role},now(),now())
        </if>
    </insert>

    <select id="selectByUsername" parameterType="string" resultMap="BaseResultMap">

        select userId,username,password,phone,email,role,create_time,update_time from user
        where username=#{username}
    </select>

    <select id="checkUsername" parameterType="string" resultType="int">

        select count(1) from user where username=#{username}
    </select>

</mapper>